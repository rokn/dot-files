menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[module/spotify]
type = custom/script

format-prefix = " "
format-prefix-foreground = #84bd00
format = <label>

;exec-if = /home/rokner/.config/polybar/scripts/spotify/spotify-if.py
exec = /home/rokner/.config/polybar/scripts/spotify/spotify.py

click-left = playerctl -p spotify play-pause
click-middle = playerctl -p spotify previous
click-right = playerctl -p spotify next

label = %output:0:23:..%

interval = 1


[module/gmail]
type = custom/script
exec = ~/.config/polybar/scripts/gmail/launch.py -ns
tail = true
click-left = xdg-open https://mail.google.com


