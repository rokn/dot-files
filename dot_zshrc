setopt autocd

export EDITOR="vim"

export GOPATH=$HOME/go
export BUN_INSTALL="$HOME/.bun"

export PATH="$HOME/.local/bin/:$PATH"
export PATH=$PATH:$GOPATH/bin
export PATH="/opt/homebrew/bin:$PATH"
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"

export PATH="$BUN_INSTALL/bin:$PATH"

#fancy ctrl z for vim
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line
  else
    zle push-input
    zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

# Source additional configuration files
local config_files=(
    "$HOME/.local/bin/env"
    "$HOME/.config/zsh/git_functions.zsh"
    "$HOME/.bun/_bun"
    "$HOME/.config/zshrc_machine_specific"
    "$HOME/.config/aliases"
    "$HOME/.fzf.zsh"
    "/opt/homebrew/etc/profile.d/autojump.sh"
)

for config_file in $config_files; do
    [ -f "$config_file" ] && source "$config_file"
done

# Add completions
# Custom completions directory
fpath=(~/.zsh/completions $fpath)
fpath=(/Users/antoniomindov/.docker/completions $fpath)

# Initialize completion system
autoload -Uz compinit
compinit

eval "$(uv generate-shell-completion zsh)"
eval "$(direnv hook zsh)"
eval "$(task --completion zsh)"

if which lsd > /dev/null; then
	alias ls="lsd"
fi

# Print the current directory when changing directories
chpwd() ls

ls
