export ZSH=$HOME/.oh-my-zsh

ppugins=(git pip python httpie kubectl npm helm gcloud)
autoload zmv

source $ZSH/oh-my-zsh.sh

export EDITOR="vim"

export PATH="$HOME/.local/bin/:$PATH"

export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin
export PATH="/opt/homebrew/bin:$PATH"
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"

#fancy ctrl z for vim
fancy-ctrl-z () {
  if [[ $#BUFFER -eq 0 ]]; then
    BUFFER="fg"
    zle accept-line
  else
    zle push-input
    zle clear-screen
  fi
}
zle -N fancy-ctrl-z
bindkey '^Z' fancy-ctrl-z

source ~/.config/aliases

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# Custom completions directory
fpath=(~/.zsh/completions $fpath)
fpath=(/Users/antoniomindov/.docker/completions $fpath)
# Initialize completion system
autoload -Uz compinit
compinit

. "$HOME/.local/bin/env"
eval "$(uv generate-shell-completion zsh)"

source ~/.config/zsh/git_functions.zsh

eval "$(direnv hook zsh)"

eval "$(task --completion zsh)"

# bun completions
[ -s "/Users/antoniomindov/.bun/_bun" ] && source "/Users/antoniomindov/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

[ -f /opt/homebrew/etc/profile.d/autojump.sh ] && . /opt/homebrew/etc/profile.d/autojump.sh

source $HOME/.config/zshrc_machine_specific

chpwd() ls
