[user]
	email = {{ .email }}
	name = Antonio Mindov
{{- if .signingkey }}
	signingkey = {{ .signingkey }}
{{- end }}
[alias]
	track = checkout --track
	co = checkout
	main = checkout main
	cb = checkout -b
	st = status -sb
	oops = commit --amend --no-edit
	alias = config --get-regexp ^alias\\.
	save = stash --include-untracked
	rcont = rebase --continue
[push]
	default = current
[pull]
	rebase = true
[help]
	autocorrect = -1
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[submodule]
	recurse = true
[core]
	autocrlf = input
	excludesFile = ~/.gitignore
[gpg]
	program = /opt/homebrew/bin/gpg
[commit]
	gpgsign = true
[url "git@github.com:"]
	insteadOf = https://github.com/
